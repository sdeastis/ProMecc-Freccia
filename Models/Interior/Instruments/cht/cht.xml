<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>cht.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <object-name>vitre</object-name>
  </animation>

	<animation>
		<type>scale</type>
		<x-offset>1.15</x-offset>
		<y-offset>1.15</y-offset>
		<z-offset>1.15</z-offset>
	</animation>

  <effect>
    <inherits-from>Effects/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <condition>
      <property>controls/switches/master-bat</property>
    </condition>
    <emission>
      <factor-prop>controls/lighting/panel-norm</factor-prop>
      <red>   0.6 </red>
      <green> 0.6 </green>
      <blue>  0.6 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>engines/active-engine/cht-temperature-degf</property>
    <interpolation>
      <!--entry><ind>   0 </ind><dep>   9 </dep></entry>
      <entry><ind>  50 </ind><dep>  15 </dep></entry>
      <entry><ind>  60 </ind><dep>  20 </dep></entry>
      <entry><ind>  70 </ind><dep>  24 </dep></entry>
      <entry><ind>  80 </ind><dep>  28 </dep></entry>
      <entry><ind>  90 </ind><dep>  35 </dep></entry>
      <entry><ind> 100 </ind><dep>  44 </dep></entry>
      <entry><ind> 110 </ind><dep>  56 </dep></entry>
      <entry><ind> 120 </ind><dep>  70 </dep></entry>
      <entry><ind> 130 </ind><dep>  82 </dep></entry>
      <entry><ind> 140 </ind><dep>  92 </dep></entry>
      <entry><ind> 150 </ind><dep> 100 </dep></entry-->
      <entry><ind>  32 </ind><dep>   9 </dep></entry>
      <entry><ind> 122 </ind><dep>  15 </dep></entry>
      <entry><ind> 140 </ind><dep>  20 </dep></entry>
      <entry><ind> 158 </ind><dep>  24 </dep></entry>
      <entry><ind> 176 </ind><dep>  28 </dep></entry>
      <entry><ind> 194 </ind><dep>  35 </dep></entry>
      <entry><ind> 212 </ind><dep>  44 </dep></entry>
      <entry><ind> 230 </ind><dep>  56 </dep></entry>
      <entry><ind> 248 </ind><dep>  70 </dep></entry>
      <entry><ind> 266 </ind><dep>  82 </dep></entry>
      <entry><ind> 284 </ind><dep>  92 </dep></entry>
      <entry><ind> 302 </ind><dep> 100 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.000 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.010 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>
