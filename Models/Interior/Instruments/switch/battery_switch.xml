<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>
	
	<path>switch.ac</path>
	
	<animation>
		<type>material</type>
		<emission>
			<red>0.1</red>
			<green>0.1</green>
			<blue>0.1</blue>
			<factor-prop>controls/lighting/panel-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>pick</type>
		<object-name>Base</object-name>
		<object-name>Switch</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-cycle</command>
				<property>BATTERY</property>
				<value>0</value>
				<value>1</value>
			</binding>
			<binding>
				<command>nasal</command>
				<script>setprop("/sim/sounde/switch1", 1);</script>
			</binding>
		</action>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Switch</object-name>
		<property>BATTERY</property>
		<offset-deg>-15</offset-deg>
		<factor>30</factor>
		<axis>
			<x>0</x>
			<y>0</y>
			<z>1</z>
		</axis>
	</animation>

</PropertyList>
