            <property>/engines/engine[0]/fuel-flow-gph</property>
        </input>
        <output>
            <property>/engines/active-engine/fuel-flow-gph</property>
        </output>
    </filter>

    <filter>
        <name>Engine EGT Temp</name>
        <type>gain</type>
